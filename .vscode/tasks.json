{
    // Ctrl + Shift + B to complile
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g", // Include debug information
                "-std=c++17", // Use C++17 standard
                "-o",
                "main", // Name of the output executable
                "main.cpp", // Your source file
                "-lsfml-graphics", // Link SFML Libraries
                "-lsfml-window",
                "-lsfml-system"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
